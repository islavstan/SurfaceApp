<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.islavdroid.surfaceapp.MainActivity">

    <FrameLayout
        android:id="@+id/camera_view"

        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frontcamera_view"
        android:background="@color/colorPrimary"
        android:layout_margin="20dp"
        android:layout_width="120dp"
        android:layout_height="150dp">

    </FrameLayout>


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
       android:layout_alignParentBottom="true"
       android:weightSum="5">

<ImageButton
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:src="@drawable/ic_videocam_white_24dp"
    android:background="@null"
   />
       <ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:src="@drawable/ic_mic_off_white_24dp"
           android:background="@null"
           android:layout_weight="1"

           />


    <RelativeLayout
       android:layout_width="110dp"
       android:background="@drawable/rectangle_rounded_all"
        android:layout_weight="1"
        android:id="@+id/red_button"
       android:layout_height="50dp">
<ImageButton

    android:id="@+id/call_off"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:src="@drawable/ic_call_end_white_24dp"
    android:layout_centerVertical="true"
    android:layout_marginRight="30dp"


    android:layout_marginLeft="10dp"
    android:background="@null"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
          android:layout_marginRight="10dp"
           android:id="@+id/timer"
           android:textColor="#FFFFFF"
           android:textSize="18dp"
           android:text="01:43"/>
   </RelativeLayout>

       <ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:src="@drawable/ic_volume_up_white_24dp"
           android:background="@null"
           android:layout_weight="1"

           />
       <ImageButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:src="@drawable/ic_open_with_white_24dp"
           android:background="@null"
           android:layout_weight="1"

           />


   </LinearLayout>
</RelativeLayout>
